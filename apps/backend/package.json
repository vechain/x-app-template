    "crypto": "^1.0.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^6.11.1",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
