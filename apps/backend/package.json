    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/latlon-geohash": "^2.0.3",
    "@types/morgan": "^1.9.3",
    "@types/ngeohash": "^0.6.8",
    "@types/node": "^17.0.45",
    "@types/supertest": "^2.0.12",
